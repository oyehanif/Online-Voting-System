<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE"
    tools:context=".VoterDetail">

    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:text="Voter Detail "/>

    //Aadar card Textview
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_back_ligth_pri_stroke"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/aadarcardlogo"/>

        <EditText
            android:id="@+id/Aadarnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="Enter Aadar Card Number"
            android:background="@android:color/transparent"
            android:textColorHint="@color/pri_light"
            android:textSize="15sp"
            android:maxLines="1"
            android:inputType="text"/>


    </LinearLayout>


    // Party name
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_back_ligth_pri_stroke"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/user_icon"/>

        <EditText
            android:id="@+id/partyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="Enter Party Name"
            android:background="@android:color/transparent"
            android:textColorHint="@color/pri_light"
            android:textSize="15sp"
            android:maxLines="1"
            android:inputType="text"/>


    </LinearLayout>

    //Phone Number
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_back_ligth_pri_stroke"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_phone_24"/>

        <EditText
            android:id="@+id/voterNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="Enter PhoneNumber"
            android:background="@android:color/transparent"
            android:textColorHint="@color/pri_light"
            android:textSize="15sp"
            android:maxLines="1"
            android:inputType="text"/>

    </LinearLayout>


    <Button
        android:id="@+id/voteBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Vote !"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/round_back_sec1000"
        android:layout_marginTop="40dp"/>
</LinearLayout>